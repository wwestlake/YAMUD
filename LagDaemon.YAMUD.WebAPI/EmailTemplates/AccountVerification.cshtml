@model LagDaemon.YAMUD.WebAPI.Services.AccountVerificationViewModel

<!DOCTYPE html>
<html>
<head>
    <title>Account Verification</title>
    <style>
        /* CSS styles for the email template */
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }
        .container {
            max-width: 600px;
            margin: 20px auto;
            padding: 20px;
            background-color: #ffffff;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }
        h1 {
            color: #333333;
        }
        p {
            color: #666666;
            margin-bottom: 20px;
        }
        .button {
            display: inline-block;
            background-color: #007bff;
            color: #ffffff;
            text-decoration: none;
            padding: 10px 20px;
            border-radius: 5px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Account Verification</h1>
        <p>Your Token: @Model.Token</p>
        <p>Hello @Model.DisplayName,</p>
        <p>Your account verification is almost complete. Please click the button below to verify your email address:</p>
        <a href="@Model.VerificationUrl" class="button">Verify Email</a>
        <p>If you did not request this verification, please ignore this email.</p>
        <p>Thank you,<br />The YAMUD Team</p>
    </div>
</body>
</html>
